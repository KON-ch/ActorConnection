<div class="modal" id="reviewModal<%= review.id %>" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <label class="modal-title text-center" id="reviewModalLabel">
          <i class="fas fa-check-circle fa-lg ml-2" style="color: #FF8300;"></i>
          <h2 class="d-inline"><%= review_title.title %></h2>
          <% if review.class == Movie %>
            <p class="text-secondary text-left ml-5 mb-0"><%= review.sub_title %></p>
          <% end %>
        </label>
        <div type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </div>
      </div>
        <div class="modal-body">
          <i class="fas fa-star ml-2"></i>
          <%= f.label :rate, "評価", class:"mr-3" %>
          <%= f.number_field :rate, in: 1..5, step: 0.5, class:"w-25" %>
          <%= f.text_area :content, size: "20x10", id:"reviewInput",class:"form-control m-2" %>
          <%= f.hidden_field :review_page, value: request.url %>
        </div>
        <div class="modal-footer">
          <%= f.submit "レビューを登録", class:"btn btn-primary ml-2" %>
        </div>
    </div>
  </div>
</div>