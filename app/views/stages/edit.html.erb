<div class="container p-0 w-50 mx-auto">
  <div class="row">
    <h2 class="mt-5 mb-lg-3 offset-lg-2">公演情報変更</h2>
  </div>
  <%= form_with model: @stage do |f| %>
    <%= render partial: "stages/form", locals: {f: f} %>
    <div class="form-group text-right row">
      <%= f.submit "更新", class:"btn btn-primary mt-3 col-lg-2 offset-lg-8" %>
    </div>
  <% end %>

  <div class="row">
    <%= link_to stages_path, class:"offset-lg-2 mt-5 text-secondary" do %>
      <i class="far fa-hand-point-left"></i>
      Back
    <% end %>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('#title').select2({
      dropdownParent: $('.container'),
      placeholder: '作品を選択してください',
      width: '50%'
    });
  });
</script>