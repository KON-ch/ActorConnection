<div class="container p-0 w-50 text-center ">
  <div class="row">
    <h2 class="mt-5 mb-lg-3 offset-lg-2">公演情報登録</h2>
  </div>
  <%= form_with model: @stage do |f| %>
    <%= render partial: "stages/form", locals: {f: f} %>
    <div class="form-group text-right row">
      <%= f.submit "登録", class:"btn btn-primary mt-3 col-lg-2 offset-lg-8" %>
    </div>
  <% end %>

  <div class="row">
    <%= link_to stages_path, class:"offset-lg-2 mt-5 text-secondary" do %>
      <i class="far fa-hand-point-left"></i>
      Back
    <% end %>
  </div>
</div>
