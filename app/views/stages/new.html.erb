<div class="container p-0 w-50 text-center ">
  <div class="row">
    <h2 class="mt-5 mb-lg-3 offset-lg-2">公演情報登録</h2>
  </div>
  <%= form_with model: @stage do |f| %>
    <div class="form-group row">
      <%= f.label :theater_id, "公演名", class:"col-lg-3 offset-lg-2 col-form-label text-left px-0" %>
      <%= f.collection_select(:theater_id, @theaters, :id, :title) %>
    </div>
    <div class="form-group row">
      <%= f.label :start_date, "上演開始日", class:"col-lg-3 offset-lg-2 col-form-label text-left px-0" %>
      <%= f.date_select :start_date, use_month_numbers: true, class:"form-control col-lg-5" %>
    </div>
    <div class="form-group row">
      <%= f.label :end_date, "終演日", class:"col-lg-3 offset-lg-2 col-form-label text-left px-0" %>
      <%= f.date_select :end_date, use_month_numbers: true, class:"form-control col-lg-5" %>
    </div>
    <div class="form-group row">
      <%= f.label :company, "公演団体", class:"col-lg-3 offset-lg-2 col-form-label text-left px-0" %>
      <%= f.text_field :company, class:"form-control col-lg-5" %>
    </div>
    <div class="form-group text-right row">
      <%= f.submit "登録", class:"btn btn-primary mt-3 col-lg-3 offset-lg-7" %>
    </div>
  <% end %>

  <div class="row">
    <%= link_to stages_path, class:"offset-lg-2 mt-5 text-secondary" do %>
      <i class="far fa-hand-point-left"></i>
      Back
    <% end %>
  </div>
</div>
