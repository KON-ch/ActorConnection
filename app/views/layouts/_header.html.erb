<header>
  <nav class="navbar navbar-expand navbar-light shadow-sm p-3 fixed-top" style="background-color: #4CA2FF;">
    <div class="container">
      <a class="navbar-brand text-light" href="/" id="app_title" data-turbolinks="false">Actor Connection</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse align-items-center" id="navbarSupportedContent">
        <ul class="navbar-nav justify-content-between ml-auto">
          <li class="align-self-center mr-4">
            <%= link_to posts_path, class:"text-light text-decoration-none", data: { "turbolinks" => false } do %>
              <i class="fas fa-comments fa-2x"></i>
              <span class="d-none d-lg-inline">タイムライン</span>
            <% end %>
          </li>
          <li class="align-self-center mr-4">
            <%= link_to mypage_favorite_users_path, class:"text-light text-decoration-none" do %>
              <i class="fas fa-bookmark fa-2x"></i>
              <span class="d-none d-lg-inline">お気に入り</span>
            <% end %>
          </li>
          <li class="align-self-center mr-4">
            <%= link_to stages_path, class:"text-light text-decoration-none" do %>
              <i class="fas fa-theater-masks fa-2x"></i>
              <span class="d-none d-lg-inline">舞台</span>
            <% end %>
          </li>
          <li class="align-self-center mr-4">
            <%= link_to movies_path, class:"text-light text-decoration-none", data:{"trubolinks" => false} do %>
              <i class="fas fa-film fa-2x"></i>
              <span class="d-none d-lg-inline">映画</span>
            <% end %>
          </li>
          <li class="align-self-center mr-4">
            <%= link_to theaters_path, class:"text-light text-decoration-none" do %>
              <i class="fas fa-book-open fa-2x"></i>
              <span class="d-none d-lg-inline">戯曲</span>
            <% end %>
          </li>
          <li class="align-self-center mr-5">
            <%= link_to mypage_review_users_path, class:"text-light text-decoration-none", data: { "turbolinks" => false } do %>
              <i class="fas fa-check-circle fa-2x"></i>
              <span class="d-none d-lg-inline">レビュー</span>
            <% end %>
          </li>
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <%= link_to "#", id: "navbarDropdown", class: "nav-link dropdown-toggle text-light", role: "button", data: { toggle: "dropdown" }, aria: { haspopup: "true", expanded: "false" } do %>
                <% if current_user.image.present? %>
                  <%= image_tag current_user.image, class:"rounded-circle mb-2", style:"height: 3.0rem;" %>
                <% else %>
                  <i class="fas fa-user fa-2x"></i>
                <%end%>
                <label class="text-light"><%= current_user.name %></label>
                <span class="caret"></span>
              <% end %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "登録情報", mypage_users_path, method: :get, class: "dropdown-item" %>
                <div class="dropdown-divider"></div>
                <%= link_to "ログアウト", logout_path, method: :get, class: "dropdown-item" %>
                <% if current_user.id == 1 %>
                  <%= link_to "管理者画面", dashboard_users_path, method: :get, class: "dropdown-item" %>
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
