<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render partial: "movies/sidebar" %>
    </div>
    <div class="col-lg-9">
      <div class="d-flex align-items-end">
        <h2 class="mt-5 mb-3 text-light p-3 d-inline-block rounded" style="background-color: #4CA2FF;">
          <i class="fas fa-film"></i>
          映画一覧
        </h2>
        <%= form_with url: movies_path, method: :get, local: true, class:"form-inline ml-3 pb-3" do |f| %>
          <% if @sorted.present? %>
            <%= f.select :sort, @sort_list, selected: @sorted, onChange: "javascript: this.form.submit();", class:"form-inline ml-2" %>
          <% else %>
            <%= f.select :sort, @sort_list, {}, onChange: "javascript: this.form.submit();", class:"form-inline ml-2" %>
          <% end %>
        <% end %>
      </div>
      
      <div class="card-columns">
        <% @movies.each do |movie| %>
          <div class="card shadow">
            <div class="card-header">
              <%= movie.country %>
              <div class="float-right">
                <%= movie.production.year %>
              </div>
            </div>
            <div class="card-body">
              <%= link_to movie_path(movie) do %>
                <h2 class="card-title"><%= movie.title %></h2>
                <p class="card-title"><%= movie.sub_title %></p>
              <% end %>
              <p class="card-text"></p>
            </div>
          </div>
        <% end %>
      </div>

      <%= paginate @movies %>
      <%= link_to "新しく映画を登録", new_movie_path, class:"btn btn-primary w-25 mt-3" %>
    </div>
  </div>
</div>