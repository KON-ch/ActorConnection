<div class="container">
  <div class="form-group row">
    <div class="col-lg-4 offset-lg-1 px-0">
      <%= f.label :title, "タイトル", class:"col-form-label text-left" %>
      <span class="text-danger ml-3">( 必須 )</span>
    </div>
    <%= f.text_field :title, class:"form-control col-lg-6" %>
    <% if @movie.errors.messages[:title].present? %>
      <strong class="error-text text-left offset-lg-1"><%= @movie.errors.full_messages_for(:title).first %></strong>
    <% end %>
  </div>
  <div class="form-group row">
    <%= f.label :sub_title, "サブタイトル", class:"col-lg-4 offset-lg-1 col-form-label text-left px-0" %>
    <%= f.text_field :sub_title, class:"form-control col-lg-6" %>
  </div>
  <div class="form-group row">
    <div class="col-lg-4 offset-lg-1 px-0">
      <%= f.label :country_id, "製作国", class:"col-form-label text-left" %>
      <span class="text-danger ml-3">( 必須 )</span>
    </div>
    <%= f.collection_select(:country_id, @countries, :id, :name, {prompt:""}, {class:"form-control col-lg-6"}) %>
  </div>
  <div class="form-group row">
    <%= f.label :production, "製作年", class:"col-lg-4 offset-lg-1 col-form-label text-left px-0" %>
    <%= f.date_select :production, {discard_month: true, start_year: 1930, prompt:""}, class:"form-control col-lg-6" %>
  </div>
</div>