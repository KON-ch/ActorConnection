<div class="container p-0 w-50 text-center">
  <div class="row">
    <h2 class="mt-5 mb-lg-3 offset-lg-2">映画登録</h2>
  </div>
  <%= form_with model: @movie, local: true do |f| %>
    <%= render partial: "movies/form", locals: {f: f} %>
    <div class="form-group text-right row">
      <%= f.submit "登録", class:"btn btn-primary mt-3 col-lg-3 offset-lg-7" %>
    </div>
  <% end %>

  <div class="row">
    <%= link_to movies_path, class:"offset-lg-2 mt-5 text-secondary" do %>
      <i class="far fa-hand-point-left"></i>
      Back
    <% end %>
  </div>
</div>