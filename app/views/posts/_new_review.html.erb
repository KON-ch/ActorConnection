<div class="modal" id="reviewModal<%= post.id %>" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <label class="modal-title text-center" id="reviewModalLabel">
          <i class="fas fa-check-circle fa-lg ml-2" style="color: #FF8300;"></i>
          <h2 class="d-inline"><%= post_title.title %></h2>
          <% if post.class == Movie %>
            <p class="text-secondary text-left ml-5 mb-0"><%= post.sub_title %></p>
          <% end %>
        </label>
        <div type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </div>
      </div>
        <div class="modal-body">
          <%= f.text_area :content, size: "20x10", id:"reviewInput",class:"form-control m-2" %>
        </div>
        <div class="modal-footer">
          <%= f.submit "レビューを登録", class:"btn btn-primary ml-2" %>
        </div>
    </div>
  </div>
</div>

<script>
  $('#reviewModal<%= post.id %>').on('shown.bs.modal', function (){
    $('#reviewInput').trigger('focus');
  });
</script>