<div class="card-header">
  <%= post.country.name %>
  <div class="float-right">
    <%= post.production.year %>å¹´
  </div>
</div>
<div class="card-body">
  <%= link_to movie_path(post), class:"text-dark" do %>
    <p class="card-title" style="font-size:1.8rem;"><%= post.title %></p>
  <% end %>
  <p class="card-text"><%= post.sub_title %></p>
</div>
<div class="card-footer d-flex">
  <%= link_to favorite_movie_path(post), method: :post, remote: true, style:"color: #FF8300;" do %>
    <div class="favorite-movie-<%= post.id %>">
      <%= render partial: "movies/favorite", locals: {movie: post} %>
    </div>
  <% end %>
  <div class="review-movie-<%= post.id %>">
    <div type="button" style="color: #FF8300;" data-toggle="modal" data-target="#reviewModal<%= post.id %>">
      <i class="far fa-check-circle ml-4"></i>
    </div>
  </div>
</div>
<%= render partial: "posts/review", locals: {post: post, post_title: post} %>