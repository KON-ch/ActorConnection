<div class="card-header">
  <%= post.country.name %>
  <div class="float-right">
    <% if post.man.nil? && post.female.nil? %>
      <%= link_to "未登録", edit_theater_path(post), class:"badge badge-pill badge-warning text-light py-2", style:"background-color: #FF8300; font-size: 0.8rem;" %>
    <% else %>
      男<%= post.man%>
      女<%= post.female%>
    <% end %>
  </div>
</div>
<div class="card-body">
  <%= link_to theater_path(post) do %>
    <p class="card-title text-dark" style="font-size:1.8rem;"><%= post.title %></p>
  <% end %>
  <p class="card-text"><%= post.writer %></p>
</div>
<div class="card-footer d-flex">
  <%= link_to favorite_theater_path(post), method: :post, remote: true, style:"color: #FF8300;" do %>
    <div class="favorite-theater-<%= post.id %>">
      <%= render partial: "theaters/favorite", locals: {theater: post} %>
    </div>
  <% end %>
  <div class="review-theater-<%= post.id %>">
    <div class="d-flex">
      <% if review_present?(current_user, post) %>
        <div type="button" style="color: #FF8300;" data-toggle="modal" data-target="#reviewModal<%= post.id %>">
          <i class="far fa-check-circle ml-4"></i>
        </div>
      <% else %>
        <%= link_to theater_review_path(post.id, current_user), method: :delete, data: { confirm: 'レビューを削除します' } do %>
          <i class="fas fa-check-circle ml-4" style="color: #FF8300;"></i>
        <% end %>
      <% end %>
      <p class="ml-2 mb-0" style="color: #FF8300;"><%= post.reviews.count %></p>
    </div>
  </div>
</div>
<%= form_with model: post.reviews.new, url: theater_reviews_path(post) do |f| %>
  <%= render partial: "posts/review", locals: {post: post, post_title: post, f: f} %>
<% end %>