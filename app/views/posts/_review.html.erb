<% if review.theater_id.present? %>
  <div class="mr-2">
    <p class="mt-3 mb-4"><%= review.user.name %></p>
    <i class="fas fa-check-circle mr-2 fa-lg" style="color: #FF8300"></i>
    <i class="fas fa-book-open fa-2x mr-3"></i>
    <p class="mt-2"><%= review.content %></p>
  </div>
  <div class="d-flex align-items-start">
    <div class="card shadow-sm mt-2" style="width: 18rem;">
      <%= render partial: "theaters/card", locals: {theater: review.theater} %>
    </div>
  </div>
<% elsif review.movie_id.present? %>
  <div class="mr-2">
    <p class="mt-3 mb-4"><%= review.user.name %></p>
    <i class="fas fa-check-circle mr-2 fa-lg" style="color: #FF8300"></i>
    <i class="fas fa-film fa-2x mr-3"></i>
    <p class="mt-2"><%= review.content %></p>
  </div>
  <div class="d-flex align-items-start">
    <div class="card shadow-sm mt-2" style="width: 18rem;">
    <%= render partial: "movies/card", locals: {movie: review.movie} %>
    </div>
  </div>
<% elsif review.stage_id.present? %>
  <div class="mr-2">
    <p class="mt-3 mb-4"><%= review.user.name %></p>
    <i class="fas fa-check-circle mr-2 fa-lg" style="color: #FF8300"></i>
    <i class="fas fa-theater-masks fa-2x mr-2"></i>
    <p class="mt-2"><%= review.content %></p>
  </div>
  <div class="d-flex align-items-start">
    <div class="card shadow-sm mt-2" style="width: 18rem;">
      <%= render partial: "stages/card", locals: {stage: review.stage} %>
    </div>
  </div>
<% end %>