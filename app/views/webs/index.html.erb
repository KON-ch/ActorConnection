<div class="container">
  <div class="text-center">
    <% if !user_signed_in? %>
      <h1 style="font-family: 'Russo One', cursive;"><span style="color: #FF8300;">Theater</span><i class="fas fa-exchange-alt mx-4"></i><span class="text-primary">Theater</span></h1>
      <p class="font-weight-bold mt-3"><span id="top-intro">映画</span>から、<span id="top-intro">舞台</span>が見つかる</p>
      <p class="font-weight-bold"><span id="top-intro">舞台</span>から、<span id="top-intro">映画</span>が見つかる</p>
      <%= link_to signup_path, class:"w-50 shadow btn btn-outline-primary mt-5 mb-3 py-2 d-block mx-auto", id:"signup_btn" do %>
        <h2>新規登録はこちら</h2>
      <% end %>
      <%= link_to "ログイン", login_path, class:"w-25 btn btn-outline-secondary"%>
      <%= link_to "ゲストログイン", guest_login_path, class:"w-25 btn btn-outline-info"%>
    <% end %>

    <h1 class="rounded py-2 border border-primary text-primary" style="margin-top: 14vh;">
      <i class="fas fa-theater-masks mr-3"></i>舞台情報
    </h1>
    <div class="row row-cols-1 row-cols-lg-2 text-left">
      <% @stages.each do |stage| %>
        <div class="col mb-4">
          <div class="card h-100 shadow-sm mt-5">
            <%= render partial: "stages/card", locals: {stage: stage, review: @review} %>
          </div>
        </div>
      <% end %>
    </div>
    
    <h1 class="rounded py-2 border border-primary text-primary" style="margin-top: 8vh;">
      <i class="fas fa-film mr-3"></i>人気の映画
    </h1>
    <div class="row row-cols-1 row-cols-lg-3 text-left">
      <% @movies.each do |movie| %>
        <div class="col">
          <div class="card h-100 shadow-sm mt-5">
            <%= render partial: "movies/card", locals: {movie: movie, review: @review} %>
          </div>
        </div>
      <% end %>
    </div>
    
  </div>

</div>