<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <span>
        <%= link_to "マイページ", mypage_users_path %> > 会員情報の編集
      </span>
      <h1 class="mt-3 mb-3">会員情報の編集</h1>

      <hr>

      <%= form_with url: mypage_users_path, local: true, method: :put do |f| %>
        <div class="form-group">
          <div class="d-flex justify-content-between">
            <%= f.label :name, "氏名", class: "text-md-left" %>
            <span onclick="switchEditUserInfo('.userName', '.editUserName', '.userNameEditLabel');" class="userNameEditLabel user-edit-label">
              編集
            </span>
          </div>
          <div class="collapse show userName">
            <h2><%= @user.name %></h2>
          </div>
          <div class="collapse editUserName">
            <%=
              f.text_field :name,
              class:"form-control",
              value: @user.name,
              autofocus: "true",
              required: "",
              autocomplete: "name"
            %>

            <%= f.submit "保存", class: "btn mt-3 w-25" %>

            <% if @user.errors.messages[:name].present? %>
              <span class="error-text" role="alert">
                <strong>氏名を入力してください</strong>
              </span>
            <% end %>
          </div>
        </div>
        
        <hr>

        <div class="form-group">
          <div class="d-flex justify-content-between">
            <%= f.label :email, "メールアドレス", class: "text-md-left" %>
            <span onclick="switchEditUserInfo('.userMail', '.editUserMail', '.userMailEditLabel');" class="userMailEditLabel user-edit-label">
              編集
            </span>
          </div>
          <div class="collapse show userMail">
            <h2><%= @user.email %></h2>
          </div>
          <div class="collapse editUserMail">
            <%=
              f.email_field :email,
              class:"form-controle",
              autofocus: "true",
              required: "",
              value: @user.email,
              autocomplete: "email",
              placeholder: "メールアドレスを入力"
            %>

            <%= f.submit "保存", class: "btn mt-3 w-25" %>

            <% if @user.errors.messages[:email].present? %>
            <span class="invalid-feedback" role="alert">
              <strong>メールアドレスを入力してください</strong>
            </span>
            <% end %>
          </div>
        </div>

        <hr>

        <div class="form-group">
          <div class="d-flex justify-content-between">
            <%= f.label :profile, "プロフィール", class: "text-md-left" %>
            <span onclick="switchEditUserInfo('.userProfile', '.editUserProfile', '.userProfileEditLabel');" class="userProfileEditLabel user-edit-label">
              編集
            </span>
          </div>
          <div class="collapse show userProfile">
            <h2><%= @user.profile %></h2>
          </div>
          <div class="collapse editUserProfile">
            <%=
              f.text_area :profile,
              class:"form-controle",
              autofocus: "true",
              value: @user.profile
            %>

            <%= f.submit "保存", class: "btn mt-3 w-25" %>

          </div>
        </div>

        <hr>

      <% end %>
    </div>
  </div>
</div>


<script type="text/javascript">
  let switchEditUserInfo = (textClass, inputClass, labelClass) => {
      if ($(textClass).css('display') == 'block') {
          $(labelClass).text("キャンセル");
          $(textClass).removeClass('show');
          $(inputClass).addClass('show');
      } else {
          $(labelClass).text("編集");
          $(textClass).addClass('show');
          $(inputClass).removeClass('show');
      }
  }
</script>