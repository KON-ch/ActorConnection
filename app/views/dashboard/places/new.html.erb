<div class="container p-0 text-center ">
  <div class="row">
    <h2 class="mt-7 mb-lg-3 offset-lg-1">劇場情報登録</h2>
  </div>
  <%= form_with model: @place, url: dashboard_places_path, local: true do |f| %>
    <div class="form-group row">
      <%= f.label :name, "劇場名", class:"col-lg-2 offset-lg-1 col-form-label text-left px-0" %>
      <%= f.text_field :name, class: "form-control col-lg-7" %>
    </div>
    <div class="form-group row">
      <%= f.label :address, "住所", class:"col-lg-2 offset-lg-1 col-form-label text-left px-0" %>
      <%= f.text_field :address, class:"form-control col-lg-7" %>
    </div>
    <div class="form-group row">
      <%= f.label :access, "アクセス", class:"col-lg-2 offset-lg-1 col-form-label text-left px-0" %>
      <%= f.text_area :access, class:"form-control col-lg-7" %>
    </div>
    <div class="form-group text-right row">
      <%= f.submit "登録", class:"btn btn-primary mt-3 col-lg-2 offset-lg-7" %>
    </div>
  <% end %>

  <div class="row">
    <%= link_to dashboard_places_path, class:"offset-lg-1 mt-7 text-secondary" do %>
      <i class="far fa-hand-point-left"></i>
      Back
    <% end %>
  </div>
</div>