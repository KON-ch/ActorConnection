<div class="form-group row">
  <%= f.label :theater_id, "公演名", class:"col-lg-3 offset-lg-2 col-form-label text-left px-0" %>
  <%= f.collection_select(:theater_id, @theaters, :id, :title, {prompt:""}, {id:"title", class:"form-control col-lg-6"}) %>
</div>
<div class="form-group row">
  <%= f.label :start_date, "開演日", class:"col-lg-3 offset-lg-2 col-form-label text-left px-0" %>
  <%= f.date_select :start_date, {use_month_numbers: true}, class:"form-control col-lg-2" %>
</div>
<div class="form-group row">
  <%= f.label :end_date, "終演日", class:"col-lg-3 offset-lg-2 col-form-label text-left px-0" %>
  <%= f.date_select :end_date, {use_month_numbers: true}, class:"form-control col-lg-2" %>
</div>
<div class="form-group row">
  <%= f.label :soiree_ids, "夜公演日", class:"col-form-label text-left col-lg-3 offset-lg-2 px-0" %>
  <%= f.collection_check_boxes(:soiree_ids, Soiree.all, :id, :performance_date, {prompt:""}, {class:"form-cobntrol"}) %>
</div>
<div class="form-group row">
  <%= f.label :matinee, "昼時間", class:"col-from-label text-left col-lg-3 offset-lg-2 px-0" %>
  <%= f.time_select :matinee, {minute_step: 30, prompt:""}, class:"form-control col-lg-3" %>
</div>
<div class="form-group row">
  <%= f.label :soiree, "夜時間", class:"col-from-label text-left col-lg-3 offset-lg-2 px-0" %>
  <%= f.time_select :soiree, {minute_step: 30, prompt:""}, class:"form-control col-lg-3" %>
</div>
<div class="form-group row">
  <%= f.label :director, "演出家", class:"col-form-label text-left col-lg-3 offset-lg-2 px-0" %>
  <%= f.text_field :director, class:"form-control col-lg-6" %>
</div>
<div class="form-group row">
  <%= f.label :company, "公演団体", class:"col-lg-3 offset-lg-2 col-form-label text-left px-0" %>
  <%= f.text_field :company, class:"form-control col-lg-6" %>
</div>
<div class="form-group row">
  <%= f.label :synopsis, "あらすじ", class:"col-lg-3 offset-lg-2 col-form-label text-left px-0" %>
  <%= f.text_area :synopsis, class:"form-control col-lg-6" %>
</div>
<div class="form-group row">
  <%= f.label :quote_url, "引用元URL", class:"col-lg-3 offset-lg-2 px-0 col-form-label text-left" %>
  <%= f.text_field :quote_url, class:"form-control col-lg-6" %>
</div>
<div class="form-group row">
  <%= f.label :place_id, "劇場", class:"col-lg-3 offset-lg-2 col-form-label text-left px-0" %>
  <%= f.collection_select(:place_id, @places, :id, :name, {prompt:""}, {class:"form-control col-lg-6"}) %>
</div>
<div class="form-group text-right row">
  <%= f.submit submit, class:"btn btn-primary mt-3 col-lg-3 offset-lg-7" %>
</div>