<div class="container p-0 text-center ">
  <div class="row">
    <h2 class="mt-5 mb-lg-3 offset-lg-2">公演情報変更</h2>
  </div>
  <%= form_with model: @stage, url: dashboard_stage_path(@stage), method: :put, local: true do |f| %>
    <%= render partial: "dashboard/stages/form", locals: {f: f, submit: "更新"} %>
  <% end %>

  <div class="row">
    <%= link_to dashboard_stages_path, class:"offset-lg-2 mt-5 text-secondary" do %>
      <i class="far fa-hand-point-left"></i>
      Back
    <% end %>
  </div>
</div>
