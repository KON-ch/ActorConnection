<div class="container">
  <h2 class="my-3">
      国名管理
  </h2>
</div>
<div class="container">
  <%= form_with model: @country, url: dashboard_countries_path, local: true do |f| %>
    <div class="form-group row">
      <%= f.label :name, "国名登録", class:"col-lg-1 offset-lg-1 col-form-label text-left px-0" %>
      <%= f.text_field :name, class: "form-control col-lg-4" %>
    </div>
    <div class="form-group text-right row">
      <%= f.submit "登録", class:"btn btn-primary mt-3 col-lg-2 offset-lg-4" %>
    </div>
  <% end %>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>国名</th>
      </tr>
    </thead>
    <tbody>
      <% @countries.each do |country| %>
        <tr>
          <td><%= country.id %></td>
          <td><%= country.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
