<div class="form-group row">
  <%= f.label :title, "題名", class:"col-lg-3 offset-lg-3 col-form-label text-left px-0" %>
  <%= f.text_field :title, class:"form-control col-lg-5" %>
</div>
<div class="form-group row">
  <%= f.label :writer, "作者", class:"col-lg-3 offset-lg-3 col-form-label text-left px-0" %>
  <%= f.text_field :writer, class:"form-control col-lg-5" %>
</div>
<div class="form-group row">
  <%= f.label :country_id, "国籍", class:"col-lg-3 offset-lg-3 col-form-label text-left px-0" %>
  <%= f.collection_select(:country_id, @countries, :id, :name, {prompt:""}, {class:"form-control col-lg-5"}) %>
</div>
<div class="form-group row">
  <%= f.label :man, "登場人数 ( 男 )", class:"col-lg-3 offset-lg-3 col-form-label text-left px-0" %>
  <%= f.number_field :man, min: 0, class:"form-control col-lg-5" %>
</div>
<div class="form-group row">
  <%= f.label :female, "登場人数 ( 女 )", class:"col-lg-3 offset-lg-3 col-form-label text-left px-0" %>
  <%= f.number_field :female, min: 0, class:"form-control col-lg-5" %>
</div>