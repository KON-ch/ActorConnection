<div class="container p-0 w-50 text-center ">
  <div class="row">
    <h2 class="mt-5 mb-lg-3 offset-lg-2">戯曲登録</h2>
  </div>
  <%= form_with model: @theater do |f| %>
    <div class="form-group row">
      <%= f.label :title, "題名", class:"col-lg-3 offset-lg-2 col-form-label text-left px-0" %>
      <%= f.text_field :title, class:"form-control col-lg-5" %>
    </div>
    <div class="form-group row">
      <%= f.label :writer, "作者", class:"col-lg-3 offset-lg-2 col-form-label text-left px-0" %>
      <%= f.text_field :writer, class:"form-control col-lg-5" %>
    </div>
    <div class="form-group row">
      <%= f.label :country, "国籍", class:"col-lg-3 offset-lg-2 col-form-label text-left px-0" %>
      <%= f.text_field :country, class:"form-control col-lg-5" %>
    </div>
    <div class="form-group row">
      <%= f.label :transator, "翻訳者", class:"col-lg-3 offset-lg-2 col-form-label text-left px-0" %>
      <%= f.text_field :transator, class:"form-control col-lg-5" %>
    </div>
    <div class="form-group row">
      <%= f.label :man, "登場人数 ( 男 )", class:"col-lg-3 offset-lg-2 col-form-label text-left px-0" %>
      <%= f.number_field :man, class:"form-control col-lg-5" %>
    </div>
    <div class="form-group row">
      <%= f.label :female, "登場人数 ( 女 )", class:"col-lg-3 offset-lg-2 col-form-label text-left px-0" %>
      <%= f.number_field :female, class:"form-control col-lg-5" %>
    </div>
    <div class="form-group row">
      <%= f.label :include, "収録本", class:"col-lg-3 offset-lg-2 col-form-label text-left px-0" %>
      <%= f.text_field :include, class:"form-control col-lg-5" %>
    </div>
    <div class="form-group row">
      <%= f.label :publication, "出版社", class:"col-lg-3 offset-lg-2 col-form-label text-left px-0" %>
      <%= f.text_field :publication, class:"form-control col-lg-5" %>
    </div>

    <div class="form-group text-right row">
      <%= f.submit "登録", class:"btn btn-primary mt-3 col-lg-3 offset-lg-7" %>
    </div>
  <% end %>

  <div class="row">
    <%= link_to "Back", theaters_path, class:"offset-lg-2 mt-5" %>
  </div>
</div>
