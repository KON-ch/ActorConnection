<div class="container">
  <div class="row">
    <div class="d-none d-lg-block col-lg-3">
      <%= render partial: "theaters/sidebar" %>
    </div>
    <div class="col-lg-9">
      <div class="d-flex align-items-end">
        <h2 class="mt-5 mb-3 text-light p-3 d-inline-block rounded" style="background-color: #4CA2FF;">
          <i class="fas fa-book-open"></i>
          戯曲一覧
        </h2>
        <%= form_with url: theaters_path, method: :get, local: true, class:"form-inline ml-3 pb-3" do |f| %>
          <% if @sorted.present? %>
            <%= f.select :sort, @sort_list, selected: @sorted, onChange: "javascript: this.form.submit();", class:"form-inline ml-2" %>
          <% else %>
            <%= f.select :sort, @sort_list, {}, onChange: "javascript: this.form.submit();", class:"form-inline ml-2" %>
          <% end %>
        <% end %>
      </div>
      
      <div class="card-columns">
        <% @theaters.each do |theater| %>
          <div class="card shadow">
            <div class="card-header">
              <%= theater.country %>
              <div class="float-right">
                <% if theater.man.nil? && theater.female.nil? %>
                  <%= link_to "未登録", edit_theater_path(theater) %>
                <% else %>
                  男<%= theater.man%>
                  女<%= theater.female%>
                <% end %>
              </div>
            </div>
            <div class="card-body">
              <%= link_to theater_path(theater) do %>
                <h2 class="card-title"><%= theater.title %></h2>
              <% end %>
              <p class="card-text"><%= theater.writer %></p>
            </div>
          </div>
        <% end %>
      </div>

      <%= paginate @theaters %>
      <%= link_to new_theater_path, class:"btn btn-primary w-25 mt-3", local: true do %>
        新しく戯曲を登録
      <% end %>
    
    </div>
  </div>
</div>
