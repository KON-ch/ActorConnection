<h1>Theaters#show</h1>

<%= @theater.title %>
<%= @theater.writer %>
<%= @theater.country_id %>
<%= @theater.man %>
<%= @theater.female %>
<%= @theater.translator %>
<%= @theater.include %>
<%= @theater.publication %>
<%= link_to "Edit", edit_theater_path(@theater) %>
<%= link_to "Delete", theater_path(@theater), method: :delete, data: { confirm: 'Are you sure?' } %>

<div class="row">
  <% @reviews.each do |review| %>
    <div class="offset-md-5 col-md-5">
      <p class="h3"><%= review.content %></p>
      <label><%= review.created_at %></label>
    </div>
  <% end %>
</div>
<% if user_signed_in? %>
  <div class="row">
    <div class="offset-md-5 col-md-5">
      <%= form_with model: @review, url: theater_reviews_path(@theater) do |f| %>
        <%= f.text_area :content, class:"form-control m-2" %>
        <%= f.submit "レビューを追加", class:"btn btn-outline-primary ml-2" %>
      <% end %>
    </div>
  </div>
<% end %>

<%= link_to "Back", theaters_path %>
